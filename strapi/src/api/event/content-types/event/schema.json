{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Club events and activities"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "eventType": {
      "type": "enumeration",
      "enum": [
        "nadcházející",
        "proběhlá"
      ],
      "required": true
    },
    "dateFrom": {
      "type": "date",
      "required": true
    },
    "dateTo": {
      "type": "date"
    },
    "publishDate": {
      "type": "date"
    },
    "eventTime": {
      "type": "time"
    },
    "eventTimeTo": {
      "type": "time"
    },
    "description": {
      "type": "text"
    },
    "requiresPhotographer": {
      "type": "boolean",
      "default": false
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "files": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files",
        "images",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "modifiedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "events"
    }
  }
}
